<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewCircleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Circle Calculations" />

    <TextView
        android:id="@+id/textViewCircleInputLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCircleTitle"
        android:layout_marginRight="28dp"
        android:layout_marginTop="65dp"
        android:layout_toLeftOf="@+id/textViewCircleTitle"
        android:text="Input" />

    <EditText
        android:id="@+id/editTextCircleInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCircleTitle"
        android:layout_alignRight="@+id/buttonCirlceClear"
        android:layout_alignTop="@+id/textViewCircleInputLable"
        android:ems="10"
        >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonCircleCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCircleInputLable"
        android:layout_below="@+id/editTextCircleInput"
        android:layout_marginTop="14dp"
        android:text="Calculate" />

    <Button
        android:id="@+id/buttonCirlceClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonCircleCalc"
        android:layout_alignRight="@+id/textViewCircleTitle"
        android:text="Clear" />

    <TextView
        android:id="@+id/textViewCirlceAreaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewCircleInputLable"
        android:layout_below="@+id/buttonCircleCalc"
        android:layout_marginTop="33dp"
        android:text="Area" />

    <TextView
        android:id="@+id/textViewCircleCircumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCirlceAreaLabel"
        android:layout_below="@+id/textViewCirlceAreaLabel"
        android:layout_marginTop="24dp"
        android:text="Circumference" />

    <TextView
        android:id="@+id/textViewCircleAreaResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewCircleCircumLabel"
        android:layout_alignLeft="@+id/buttonCirlceClear"
        android:layout_marginLeft="33dp"
        android:text="0.00" />

    <TextView
        android:id="@+id/textViewCircleCircumResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewCircleCircumLabel"
        android:layout_alignBottom="@+id/textViewCircleCircumLabel"
        android:layout_alignLeft="@+id/textViewCircleAreaResult"
        android:text="0.00" />

</RelativeLayout>